//- Globally expose mixins without output, needed for prototypes
include ../../../core/templates/mixins/icon
include ../../../core/templates/mixins/render-page-tree
include ../../../core/templates/mixins/sample
include ../../../core/templates/mixins/styleguide-settings
include ../../../core/templates/mixins/languages
include ../_mixins/all

block pageVariables
    //- Use this block to append page variables in templates
    - var projectTitle = "Bedrock - Tailwind"
    - var htmlClass = ""
    - var bodyClass = ""

block append styleguideSettings
    - var styleguideLogoAsImage = true
    - var styleguideLogoAsImagePath = "/images/bedrock-logo-black.svg"

doctype html
html(dir="ltr" lang="en" class=htmlClass ? htmlClass : '')
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="robots" content="noindex")

        title
            if moduleTitle
                | #{moduleTitle} - #{projectTitle}
            else
                | #{projectTitle}

        link(rel="stylesheet" href="/css/main.css")
        link(rel="stylesheet" href="/css/prototype.css")
        link(rel="stylesheet" href="/css/styleguide.css")

        block headerStyles
            // Nothing yet

        block styleguideSettings
            - var styleguideButtonClass = 'inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover_bg-gray-50 focus_outline-none focus_ring-2 focus_ring-offset-2 focus_ring-indigo-500'
            - var styleguideBrandLink = "/styleguide"
            - var styleguideComponentGroupHeaderClass = 'text-2xl font-medium py-6'
            - var styleguideSampleHeadingClass = 'text-lg font-medium py-6'
            - var styleguideComponentListingCategoryClass = 'text-lg font-medium py-6'
            - var styleguideNavListTitleClass = 'text-base font-medium py-6'
            - var styleguideNavListItemClass = 'p-2'
            - var styleguideNavListItemLinkClass = 'text-gray-500'
            - var styleguideNavListItemLinkActiveClass = 'text-indigo-500'
            - var styleguideInputClass = 'p-2 max-w-lg block w-full shadow-sm focus_ring-indigo-500 focus_border-indigo-500 sm_max-w-xs sm_text-sm border-gray-300 rounded-md'
            - var styleguideSearchPlaceholderString = "Search components..."
            - var styleguideSearchCustomTemplate = false
            - var styleguideBrandCustomTemplate = true

    body(class=bodyClass ? bodyClass : '')

        .br-prototype-wrapper
            include ../../../core/templates/includes/prototype-nav
            .br-prototype-content
                block body


        = "\n"
        script(src='/js/bundle.js')

        block footerScripts
            // Nothing yet
